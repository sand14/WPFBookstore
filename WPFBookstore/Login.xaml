<Window x:Class="WPFBookstore.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBookstore"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="250" Background="#696969" WindowStartupLocation="CenterScreen">

    <Grid>
        <TextBlock Margin="105,10,78,328" FontSize="15" RenderTransformOrigin="1.06,0.522">Login</TextBlock>
        <Button Click="loginbutton_Click" Content="Login" HorizontalAlignment="Left" Height="44" Margin="68,313,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBox Name="usernamebox" HorizontalAlignment="Center" Margin="0,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="passwordbox" HorizontalAlignment="Center" Margin="0,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username:" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Center" Margin="0,166,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
